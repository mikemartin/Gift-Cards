<!DOCTYPE html>
<html lang="">
<head>
  <!-- @include "../partials/head" -->
</head>
<body>
  <!-- @include "../partials/navigation" -->

  <main class="wrapper">
    <h1 class="page-title">Account Settings</h1>
    
    <div class="secondary-content">
      <div class="sidebar">
        <ul>
          <li class="nav-link "><a href="/account">Home</a></li>
          <li class="nav-link active"><a href="/account/settings.html">Settings</a></li>
          <li class="nav-link"><a href="/account/orders">Order History</a></li>
          <li class="nav-link"><a href="/account/payments.html">Payments</a></li>
        </ul>
      </div>
    </div>
    <div class="main-content">      
      
      <form>        
        <fieldset>
          <legend>Change Your Password</legend>
          <div class="flash-success">
            All good! Your information was updated successfully.
          </div>

          <!--<div class="flash-alert">
            Are you sure you want to do that?
          </div>-->

          <label for="password">Old Password</label>
          <input type="password" value="" name="password" id="password">
          <p class="instructions">Minimum of 6 characters with at least one number</p>
          <label for="password-confirm">Confirm Password</label>
          <input type="password" value="" name="password-confirm" id="password-confirm"> 
          <input type="submit" value="Update" class="right" data-wait="Please wait...">
        </fieldset>
      </form>
      
      <form>
        <fieldset>
          <legend>Your Details</legend>
          
          <div class="flash-error">
            Something terrible happened. Please check the required fields.
          </div>

          <!--<div class="flash-notice">Did you know that you're awesome?</div>-->

          
          <div class="field-half">
            <div class="field">
              <label for="first-name">First Name</label>
              <input type="text" value="" name="first-name" id="first-name" class="invalid">
              <div class="invalid-error">First name is a required field.</div> 
            </div>
            <div class="field">
              <label for="last-name">Last Name</label>
              <input type="text" value="" name="last-name" id="last-name">
            </div>
          </div>
          <label for="email">New Email</label>
          <input type="email" value="" name="email" id="email">
          <label for="email">Confirm New Email</label>
          <input type="email" value="" name="email-confirm" id="email-confirm">
          <label for="phone">Home Phone</label>
          <input type="tel" value="" name="phone" id="phone">
          <label for="mobile">Mobile Phone</label>
          <input type="tel" value="" name="mobile" id="mobile"> 
          <div class="field-half">
            <div class="field">
              <label for="work">Work Phone (optional)</label>
              <input type="tel" value="" name="work" id="work">
            </div>
            <div class="field">
              <label for="work-ext">Extension</label>
              <input type="tel" value="" name="work-ext" id="work-ext" class="input-small">
            </div>
          </div>
          
          <input type="submit" value="Update" class="right" data-wait="Please wait...">

        </fieldset>
        
      </form>
 
    </div>
  </main>

  <!-- @include "../partials/footer" -->
</body>
</html>