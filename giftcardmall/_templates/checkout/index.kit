<!DOCTYPE html>
<html lang="">
<head>
  <base href="../">
  <!-- @include "../partials/head" -->
</head>
<body>
  <!-- @include "../partials/checkout-navigation" -->

  <main class="main-section section--subtle">
    <div class="wrapper-large vertical-divider">
      <div class="column split-content">

        <form class="form-login">
          <fieldset>
            <h4 class="form-title">Returning Customer</h4>
            <label for="email">Email Address</label>
            <input type="email" value="" name="email" id="email" placeholder="Email">
            <label for="password">Password</label>
            <input type="password" value="" name="password" id="password" placeholder="Password">      
            <input type="submit" value="Sign In" data-wait="Please wait...">
            </fieldset>
        </form>
        


        <form class="form-password">
          <fieldset>
            <h5>Forgot Your Password?</h5>
            <label for="email">Email Address</label>
            <input type="email" value="" name="email" id="email" placeholder="Email">
            <input type="submit" value="Send Password" data-wait="Please wait...">
            </fieldset>
        </form>

      </div>
      <div class="column split-content">
        <h4 class="form-title">New Customer</h4>
        <div class="new-customer">
          <h5>Save Time Now</h5>
          <p>Check out now without creating an account. You can register for faster checkout later.</p>
          <a href="/checkout/payment.html" class="button">Continue as Guest</a>
        </div>
        <div class="new-customer">
          <h5>Save Time Later</h5>
          <p>Create an account for fast checkout. Manager your order history and access saved card designs.</p>
          <a href="/checkout/payment.html" class="button">Create Account</a>
        </div>
      </div>
    </div>
  </main>
  
  <!-- @include "../partials/scripts" -->
  <!-- @include "../partials/scripts-payment" -->
  
</body>
</html>