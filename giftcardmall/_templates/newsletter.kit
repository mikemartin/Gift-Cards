<!DOCTYPE html>
<html lang="">
<head>
  <!-- @include "partials/head" -->
</head>
<body>
  <!-- @include "partials/navigation" -->

  
  <main class="main-section section--subtle">

    <header class="section--centering">
      <div class="wrapper-medium">
        <div class="title-line">
          <h2 class="page-title">Sign Up For Emails</h2>
        </div>
        <h5 class="subheader">Receive notifications and promotions</h5>
      </div>
    </header>
    
    <div class="wrapper-small">
      <form class="form-login">
        <fieldset>
          <input type="text" placeholder="first name" name="first-name" id="first-name">
          <input type="text" placeholder="last name" name="last-name" id="last-name">
          <input type="email" placeholder="email" value="" name="email" id="email">
          <div class="field">
            <label class="checkbox-small">
              <input type="checkbox" class="checkbox" name="special-offers"> By clicking Sign up, you agree to Gift Card Mall's <a href="terms-of-use.html">Terms of Use</a> and <a href="privacy-policy.html">Privacy Policy</a>
            </label>
          </div>
          <input type="submit" value="Sign Up!" class="button--expand" data-wait="Please wait...">

        </fieldset>
      </form>
    </div>
  </main>
  
  <!-- @include "partials/footer" -->
  
</body>
</html>