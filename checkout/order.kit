  <main class="wrapper-full">
      <h3>Review Your Order</h3>
      <p>By placing your order, you agree to the <a href="javascript:void(0);">cardholder terms and conditions</a></p>
      
      <table class="table-borders cart-table">
          <thead class="cart-table-head">
            <tr>
              <th class="cart-table-title"><h4>E-Gift Card</h4></th>
              <th>Card Value</th>
              <th class="numeric">Card Price</th>
              <th class="numeric">Quantity</th>
              <th class="numeric">Total</th>
              <th class="numeric">Action</th>
           </tr>
          </thead>
          <tbody class="cart-table-body">
            <tr>
              <td>{{ title }}</td>
              <td class="numeric">$25.00</td>
              <td class="numeric">$0.99</td>
              <td class="numeric">1</td>
              <td class="numeric">$25.99</td>
              <td><button>Edit</button><button>Remove</button></td>
            </tr>
            <tr>
              <td>{{ title }}</td>
              <td class="numeric">$25.00</td>
              <td class="numeric">$0.99</td>
              <td class="numeric">1</td>
              <td class="numeric">$25.99</td>
              <td><button>Edit</button><button>Remove</button></td>
            </tr>
          </tbody>
          <tfoot class="cart-table-footer">
            <tr>
              <th colspan="5">Subtotal:</th>
              <td>{{ subtotal }}</td>
            </tr>
            <tr>
              <th colspan="5">Shipping:</th>
              <td>{{ shipping }}</td>
            </tr>
            <tr>
              <th colspan="5">Tax:</th>
              <td>{{ tax }}</td>
            </tr>
            <tr>
              <th colspan="5">Discount:</th>
              <td>{{ discount }}</td>
            </tr>
            <tr>
              <th colspan="5">Order Total:</th>
              <td>{{ total }}</strong></td>
            </tr>
          </tfoot>
        </table>
    
    </div>
