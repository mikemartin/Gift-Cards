<!DOCTYPE html>
<html lang="">
<head>
  <!-- @include "partials/head" -->
</head>
<body>
  <!-- @include "partials/navigation" -->

  
  <main class="wrapper">
    <h1 class="page-title">Login or Create Account</h1>
    <div class="wrapper-large vertical-divider">
      <div class="column split-content">

        <form class="form-login">
          <fieldset>
            <h4 class="form-title">Returning Customer</h4>
            <label for="email">Email Address</label>
            <input type="email" value="" name="email" id="email" placeholder="Email">
            <label for="password">Password</label>
            <input type="password" value="" name="password" id="password" placeholder="Password">      
            <input type="submit" class="right" value="Sign In" data-wait="Please wait...">
            </fieldset>
        </form>

        <form class="form-password">
          <fieldset>
            <h6>Forgot Your Password</h6>
            <label for="email">Email Address</label>
            <input type="email" value="" name="email" id="email" placeholder="Email">
            <input type="submit" class="right" value="Send Password" data-wait="Please wait...">
            </fieldset>
        </form>

      </div>
      <div class="column split-content">
        <form class="form-create">
          <fieldset>
            <h4 class="form-title">New Customer</h4>
            <label for="first-name">First Name</label>
            <input type="text" value="" name="first-name" id="first-name">
            <label for="last-name">Last Name</label>
            <input type="text" value="" name="last-name" id="last-name">
            <label for="email">Email</label>
            <input type="email" value="" name="email" id="email">
            <label for="email">Confirm Email</label>
            <input type="email" value="" name="email-confirm" id="email-confirm">
            <label for="password">Password</label>
            <input type="password" value="" name="password" id="password">
            <p class="instructions">Minimum of 6 characters with at least one number</p>
            <label for="password-confirm">Confirm Password</label>
            <input type="password" value="" name="password-confirm" id="password-confirm">  

            <label class="checkbox-small">
              <input type="checkbox" class="checkbox" name="special-offers"> Woolworths may email me about special offers and promotions
            </label>

            <input type="submit" class="right" value="Create Account" data-wait="Please wait...">
            </fieldset>
        </form>
      </div>
    </div>
  </main>
  
  <!-- @include "partials/footer" -->
  
</body>
</html>